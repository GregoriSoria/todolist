<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="admin.com.todolist.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:id="@+id/inserir_tarefa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp"
        android:text="Inserir tarefa" />

    <EditText
        android:id="@+id/meuTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayout"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="textPersonName" />

    <ListView
        android:id="@+id/minhaLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/meuTexto"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/inserir_tarefa" />

</RelativeLayout>
